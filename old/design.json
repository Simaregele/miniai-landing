{
    "theme": {
      "colors": {
        "background": "#0A1128",
        "surface": "#1F2937",
        "surfaceAlt": "#17202A",
        "primary": "#2DD4BF",
        "primaryHover": "#1FBFA4",
        "textHigh": "#FFFFFF",
        "textMid": "#94A3B8",
        "textLow": "#4B5563",
        "accent": "#30E5C8"
      },
      "typography": {
        "fontFamily": "'Inter', sans-serif",
        "fontWeights": {
          "regular": 400,
          "medium": 500,
          "bold": 700
        },
        "fontSizes": {
          "h1": "48px",
          "h2": "32px",
          "h3": "24px",
          "body": "16px",
          "small": "14px"
        },
        "lineHeights": {
          "tight": 1.2,
          "normal": 1.5
        }
      },
      "spacing": {
        "xxs": "4px",
        "xs": "8px",
        "sm": "16px",
        "md": "24px",
        "lg": "32px",
        "xl": "48px"
      },
      "radii": {
        "sm": "4px",
        "md": "8px",
        "lg": "12px",
        "pill": "9999px"
      },
      "shadows": {
        "card": "0 4px 12px rgba(0, 0, 0, 0.5)",
        "elevated": "0 8px 24px rgba(0, 0, 0, 0.6)"
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },
    "layout": {
      "grid": {
        "hero": {
          "columns": ["1fr", "1fr"],
          "gap": "24px",
          "responsive": {
            "belowMd": {
              "columns": ["1fr"]
            }
          }
        },
        "cards3": {
          "columns": ["repeat(3, 1fr)"],
          "gap": "16px",
          "responsive": {
            "belowMd": {
              "columns": ["1fr"]
            }
          }
        },
        "caseTwoCol": {
          "columns": ["1fr", "1fr"],
          "gap": "32px",
          "responsive": {
            "belowLg": {
              "columns": ["1fr"]
            }
          }
        }
      },
      "header": {
        "height": "64px",
        "padding": ["0", "32px"],
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between"
      }
    },
    "components": {
      "Header": {
        "background": "transparent",
        "logo": {
          "type": "text",
          "style": {
            "fontSize": "24px",
            "fontWeight": "bold",
            "color": "textHigh"
          }
        },
        "nav": {
          "item": {
            "fontSize": "16px",
            "fontWeight": "medium",
            "color": "textHigh",
            "spacing": "sm"
          }
        }
      },
      "Hero": {
        "container": {
          "background": "background",
          "padding": ["md", "lg"]
        },
        "title": {
          "fontSize": "h1",
          "fontWeight": "bold",
          "color": "textHigh",
          "marginBottom": "sm"
        },
        "subtitle": {
          "fontSize": "body",
          "fontWeight": "regular",
          "color": "textMid",
          "marginBottom": "md"
        },
        "ctaButton": {
          "background": "primary",
          "hoverBackground": "primaryHover",
          "color": "textHigh",
          "fontSize": "body",
          "fontWeight": "medium",
          "padding": ["sm", "lg"],
          "borderRadius": "lg",
          "boxShadow": "elevated"
        },
        "visualPlaceholder": {
          "type": "illustration",
          "layout": "cover"
        }
      },
      "Card": {
        "default": {
          "background": "surface",
          "padding": ["md"],
          "borderRadius": "md",
          "boxShadow": "card",
          "title": {
            "fontSize": "h3",
            "fontWeight": "medium",
            "color": "textHigh",
            "marginBottom": "xs"
          },
          "body": {
            "fontSize": "body",
            "fontWeight": "regular",
            "color": "textMid"
          },
          "iconPlaceholder": {
            "size": "32px",
            "marginBottom": "sm"
          }
        }
      },
      "Tabs": {
        "container": {
          "display": "flex",
          "borderBottom": "1px solid #2E3A4B",
          "marginBottom": "md"
        },
        "tab": {
          "default": {
            "fontSize": "body",
            "fontWeight": "medium",
            "color": "textMid",
            "padding": ["xs", "sm"]
          },
          "active": {
            "color": "textHigh",
            "borderBottom": "2px solid accent"
          }
        }
      },
      "Form": {
        "container": {
          "background": "surfaceAlt",
          "padding": ["md", "lg"],
          "borderRadius": "md"
        },
        "input": {
          "background": "surface",
          "border": "none",
          "padding": ["sm"],
          "borderRadius": "sm",
          "fontSize": "body",
          "color": "textHigh",
          "placeholderColor": "textLow",
          "marginBottom": "sm"
        },
        "submitButton": {
          "extends": "Hero.ctaButton"
        }
      }
    }
  }
  